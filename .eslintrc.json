{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["jest"],
    "rules": {
        "linebreak-style":0,
        "indent": ["error", 4],
        "no-underscore-dangle": [2, { "allow": ["_id"] }],
        "no-console": ["error", { "allow": ["warn","log"] } ],
        "eol-last":0,
        "no-param-reassign":0
    }
}
